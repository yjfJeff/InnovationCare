<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".DisplayAntibioticActivity" >
    
    


    <LinearLayout 
        android:layout_marginTop="20dp"
        android:id="@+id/PDF1"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:clickable="true"
        android:onClick="clickPDF">
        
        <TextView 
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="SVUH Summary Monograph and Preparation"
        android:textColor="#A67100"/>
    <View
   	 	android:layout_width="fill_parent"
    	android:layout_height="2dp"
    	android:background="@android:color/darker_gray"/>
       
	 <RelativeLayout 
	     android:layout_marginTop="6dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
            <ImageView 
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/pdf"/>
        	<TextView
        	android:id="@+id/PDF1text"
        	android:layout_centerInParent="true"
        	android:layout_width="wrap_content"
        	android:layout_height="wrap_content"
        	android:text="@string/hello_world"/>
        </RelativeLayout>
    </LinearLayout>
    
        <LinearLayout 
        android:layout_marginTop="20dp"
        android:id="@+id/PDF2"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:clickable="true"
        android:onClick="clickPDF">
	 
        <TextView 
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Renal Drugs Handbook 2009"
        android:textColor="#A67100"/>
    <View
   	 	android:layout_width="fill_parent"
    	android:layout_height="2dp"
    	android:background="@android:color/darker_gray"/>
        
        <RelativeLayout 
            android:layout_marginTop="6dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
            <ImageView 
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/pdf"/>
        	<TextView
        	android:id="@+id/PDF2text"
        	android:layout_centerInParent="true"
        	android:layout_width="wrap_content"
        	android:layout_height="wrap_content"
        	android:text="@string/hello_world"/>
        </RelativeLayout>
    </LinearLayout>
    
        <LinearLayout 
        android:id="@+id/Link1"
        android:layout_marginTop="20dp"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:clickable="true"
        android:onClick="clickLink">
        <TextView 
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Product information "
        android:textColor="#A67100"/>
    <View
   	 	android:layout_width="fill_parent"
    	android:layout_height="2dp"
    	android:background="@android:color/darker_gray"/>
        
        <RelativeLayout 
            android:layout_marginTop="6dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
            <ImageView 
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/browser"/>
        	<TextView
        android:id="@+id/Link1text"
        android:layout_width="wrap_content"
        android:layout_centerInParent="true"
        android:layout_height="wrap_content"
        android:text="@string/hello_world"/>
        </RelativeLayout>
    </LinearLayout>
    
        <LinearLayout 
        android:id="@+id/Link2"
        android:layout_marginTop="20sp"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:clickable="true"
        android:onClick="clickLink">
        
        <RelativeLayout 
            android:layout_marginTop="6dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
            <ImageView 
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/browser"/>
        	<TextView
        android:id="@+id/Link2text"
        android:layout_width="wrap_content"
        android:layout_centerInParent="true"
        android:layout_height="wrap_content"
        android:text="@string/hello_world"/>
        </RelativeLayout>
    </LinearLayout>

</LinearLayout>
